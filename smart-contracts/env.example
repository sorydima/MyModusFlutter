# MyModus Smart Contracts Environment Configuration
# Скопируйте этот файл в .env и заполните своими значениями

# Приватный ключ для деплоя (НЕ коммитьте в git!)
PRIVATE_KEY=your_private_key_here

# Infura Project ID (получите на https://infura.io/)
INFURA_PROJECT_ID=your_infura_project_id_here

# URLs для различных сетей
SEPOLIA_URL=https://sepolia.infura.io/v3/${INFURA_PROJECT_ID}
MUMBAI_URL=https://polygon-mumbai.infura.io/v3/${INFURA_PROJECT_ID}
MAINNET_URL=https://mainnet.infura.io/v3/${INFURA_PROJECT_ID}
POLYGON_URL=https://polygon-mainnet.infura.io/v3/${INFURA_PROJECT_ID}

# API ключи для верификации контрактов
ETHERSCAN_API_KEY=your_etherscan_api_key_here
POLYGONSCAN_API_KEY=your_polygonscan_api_key_here

# API ключ для газовых отчетов
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Настройки для отчетов
REPORT_GAS=true
REPORT_COVERAGE=true

# Настройки для форка (опционально)
FORK_URL=https://mainnet.infura.io/v3/${INFURA_PROJECT_ID}
FORK_BLOCK_NUMBER=latest

# Настройки для автоматизации (опционально)
AUTOMATION_ENABLED=false
AUTOMATION_INTERVAL=300

# Настройки для тестирования
TEST_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80
TEST_MNEMONIC=test test test test test test test test test test test junk

# Настройки для локальной разработки
GANACHE_URL=http://127.0.0.1:8545
GANACHE_CHAIN_ID=1337

# Настройки для IPFS (опционально)
IPFS_PROJECT_ID=your_ipfs_project_id_here
IPFS_PROJECT_SECRET=your_ipfs_project_secret_here

# Настройки для мониторинга (опционально)
ALCHEMY_API_KEY=your_alchemy_api_key_here
QUICKNODE_API_KEY=your_quicknode_api_key_here

# Настройки для безопасности
MAX_GAS_LIMIT=5000000
GAS_PRICE_MULTIPLIER=1.1

# Настройки для деплоя
DEPLOYMENT_NETWORK=ganache
VERIFY_CONTRACTS=false
OPTIMIZE_CONTRACTS=true

# Настройки для тестирования
TEST_TIMEOUT=60000
COVERAGE_THRESHOLD=80
